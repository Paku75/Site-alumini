{% extends 'base.html.twig' %}

{% form_theme formArticle 'bootstrap_4_layout.html.twig' %}

{% block body %}
<div class="form" style="padding-left:300px; padding-top:100px;">
    {% if editMode %}
        <h1>Modifier l'article</h1>
    {% else %}
        <h1>Cr√©ation d'un article</h1>
    {% endif %}
    {{ form_start(formArticle) }}

    {{ form_row(formArticle.titre, {'attr': {'placeholder': "Titre de l'article"}}) }}
    {{ form_row(formArticle.blog) }}
    {{ form_row(formArticle.contenu, {'attr': {'placeholder': "Contenu de l'article"}}) }}
    {{ form_row(formArticle.imageMin, {'attr': {'placeholder': "URL de l'image"}}) }}
    {{ form_row(formArticle.image, {'attr': {'placeholder': "URL de l'image"}}) }}

    <button type="submit" class="btn btn-primary"> 
        {% if editMode %}
            Modifier
        {% else %}
            Ajouter l'article
        {% endif %}
    </button>

    {{ form_end(formArticle) }}
</div>
{% endblock %}