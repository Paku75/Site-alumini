{% extends 'base.html.twig' %}

{% form_theme formInscription 'bootstrap_4_layout.html.twig' %}

{% block body %}
<div class="form" style="padding-left:300px; padding-top:100px;">
    {{ form_start(formInscription) }}

    {{ form_row(formInscription.nom, {'label': 'Nom d\'utilisateur', 'attr': {'placeholder': 'Nom d\'utilisateur ...'}}) }}
    {{ form_row(formInscription.prenom, {'label': 'Prénom d\'utilisateur', 'attr': {'placeholder': 'Prénom d\'utilisateur ...'}}) }}
    {{ form_row(formInscription.login, {'label': 'Login', 'attr': {'placeholder': 'Login ...'}}) }}
    {{ form_row(formInscription.email, {'label': 'Adresse email', 'attr': {'placeholder': 'Adresse email ...'}}) }}
    {{ form_row(formInscription.mdp, {'label': 'Mot de passe', 'attr': {'placeholder': 'Mot de passe ...'}}) }}
    {{ form_row(formInscription.confirm_mdp, {'label': 'Confirmer mot de passe', 'attr': {'placeholder': 'Confirmer ...'}}) }}

    <button type="submit" class="btn btn-success">Inscription</button>
    {{ form_end(formInscription) }}
</div>
{% endblock %}
