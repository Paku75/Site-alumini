{% extends 'base.html.twig' %}

{% block body %}
<div class="form" style="padding-left:300px; padding-top:100px;">
<h1> Connexion </h1>
    
    <form action="{{ path('security_login') }}" method="post">
        <div class="form-group">
            <input placeholder="Email" required name="_username" type="text" class="form-control">
        </div>

        <div class="form-group">
            <input placeholder="Mot de passe" required name="_password" type="password" class="form-control">
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-success">Connecter</button>
        </div>

</div>
{% endblock %}
